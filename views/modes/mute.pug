doctype html
html(lang="en")
  head
    title= title
    link(rel='stylesheet' href='/cdn/css/index.css')
  body
    h1 Mute a member
    form(action='/api/discord/moderation/mute' method='post')
      label(for="token") Discord Bot Token:
        br
        input#token(type="password", name="token" required='')
      label(for="serverID") Server ID:
        br
        input#serverID(type='text' name='serverID' required='' pattern='[0-9]{18,}')
      label(for="reason") Reason:
        br
        input#reason(type='text' name='reason' required='')
      input#submit(type='submit' value='Submit')